<UserControl
    x:Class="Battleships.Views.SwitchingViews.CreateAServerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Battleships.Views.SwitchingViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="640"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Enter your username" HorizontalAlignment="Center" />
            <TextBox Margin="0,0,0,15"/>
            <Button
                Grid.Row="6"
                Width="250"
                Height="40"
                Margin="10"
                HorizontalAlignment="Center"
                Command="{Binding CreateCommand}"
                Content="Create a new server"
                Cursor="Hand" />
            <Button
                Grid.Row="6"
                Grid.Column="1"
                Width="250"
                Height="40"
                Margin="10"
                HorizontalAlignment="Center"
                Command="{Binding BackCommand}"
                Content="Back"
                Cursor="Hand" />
        </StackPanel>
    </Grid>

</UserControl>
